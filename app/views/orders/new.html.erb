<!-- Header -->
<header class="page-header">
  <div class="container">
    <h1>Checkout</h1>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <%= form_for @order, url: checkout_path, html: { class: 'form-horizontal' } do |f| %>
    <fieldset>
      <legend>Customer Info</legend>

      <div class="control-group">
        <%= f.label :email, 'E-mail', class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :name, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :address, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :address, rows: 3, class: 'span6' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Payment</legend>

      <div class="control-group">
        <%= f.label :card_type, class: 'control-label' %>
        <div class="controls">
          <%= f.select :card_type, Order::CARD_TYPES, include_blank: true %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :card_number, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :card_number, class: 'span4' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :card_holder, 'Cardholder Name', class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :card_holder, class: 'span5' %>
          <small class="help-inline">As spelled in your card</small>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :card_verification_code, 'Verification Code', class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :card_verification_code, class: 'span1' %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions" style="text-align: right">
      <%= link_to 'Cancel', catalog_path, class: 'btn' %>
      <%= f.button 'Place Order', class: 'btn btn-primary' %>
    </div>
  <% end -%>
</div>