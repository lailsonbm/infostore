<table class="table table-striped">
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency item.price, unit: 'US$' %></td>
        <td><%= number_to_currency item.total_price, unit: 'US$' %></td>
        <td>
          <%= link_to cart_item_path(item), method: :delete do %>
            <i class="icon-remove"></i>
          <% end -%>
        </td>
      </tr>
    <% end -%>
    <tr>
      <td colspan="3"><strong>TOTAL</strong></td>
      <td><strong><%= number_to_currency @cart.total_price, unit: 'US$' %></strong></td>
      <td></td>
    </tr>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'Continue shopping', catalog_path, class: 'btn' %>
  <%= link_to 'Checkout Â»', new_checkout_path, class: 'btn btn-primary pull-right' %>
</div>